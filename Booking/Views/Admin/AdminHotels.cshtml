@using BookingLibrary.Models;
@using RepositoryModel.Models
@model List<Hotel>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "AdminHotels";
}




<div class="container">
    <div class="row">
        <div class="col-sm-12 col-xl-2 m-3 ">
        </div>
    </div>
</div>
<!-- Table Start -->
<div class="container-fluid pt-4 px-4 ">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-xl-4" id="deleteHotel">
                <div class="card" style="width: 18rem;">
                    @foreach (var i in item.Images)
                    {
                        <img src="/Images/@i.Name" class="card-img-top" alt="...">
                        break;
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <span class="justify-content-between">
                            <a href="~/Admin/UpdateHotel/@item.Id" class="btn btn-primary"> Update</a>
                            <a href="~/Admin/DeleteHotel/@item.Id" class="btn btn-primary"> Delete</a>
                        </span>
                    </div>
                </div>
            </div>
        }



    </div>
</div>
<!-- Table End -->
<!-- Template Javascript -->
<script src="/js/AdminMain.js"></script>

<script>


    function RemoveHotel() {

        var element = document.getElementById("deleteHotel");
        element.remove();
    }
</script>


