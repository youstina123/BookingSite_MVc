@using Booking.ViewModel
@model PartnerRegaestrationViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .card-registration .select-input.form-control[readonly]:not([disabled]) {
            font-size: 1rem;
            line-height: 2.15;
            padding-left: .75em;
            padding-right: .75em;
        }

        .card-registration .select-arrow {
            top: 13px;
        }
    </style>
</head>
<body>
    <section class="h-100 bg-dark">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">

                        <form asp-action="PartnerRegestration" asp-controller="Account">
                        <div class="row g-0">
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">

                                    <h3 class="mb-5 text-uppercase">Partner registration form</h3>

                                    <div class="row">
                                        <div class="form-outline mb-4">
                                            <div class="form-outline">
                                                <label asp-for="Name" class="form-label" for="form3Example1m"> Name</label>
                                                 <input asp-for="Name" type="text" id="form3Example1m" class="form-control form-control-lg" />
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                       
                                    </div>

                                        <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">

                                            <h6 class="mb-0 me-4">Gender: </h6>

                                            <label for="gender-male">
                                                <input type="radio" id="gender-male" name="Gender" value="Male" required />
                                                Male
                                            </label>

                                            <label for="gender-female">
                                                <input type="radio" id="gender-female" name="Gender" value="Female" required />
                                                Female
                                            </label>

                                            <span asp-validation-for="Gender" class="text-danger"></span>

                                        </div>

                                   

                                   

                                    <div class="form-outline mb-4">
                                        <label asp-for="Email" class="form-label" for="form3Example90">Email</label>
                                            <input asp-for="Email" type="text" id="form3Example90" class="form-control form-control-lg" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Password" class="form-label" for="form3Example99">Password</label>
                                        <input asp-for="Password" type="text" id="form3Example99" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="ConfirmPassword" class="form-label" for="form3Example99">ConfirmPassword</label>
                                        <input asp-for="ConfirmPassword" type="text" id="form3Example99" class="form-control form-control-lg" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                    </div>

                                   

                                    <div class="form-outline mb-4">
                                            <label asp-for="PhoneNumber" class="form-label" for="form3Example97">Phone Number</label>
                                            <input asp-for="PhoneNumber" type="text" id="form3Example97" class="form-control form-control-lg" />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                    </div>



                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">


                                    <div class="row">
                                        <div class="form-outline mb-4">
                                            <div class="form-outline">
                                                    <label asp-for="HotelName" class="form-label" for="form3Example1m">Hotel name</label>
                                                <input asp-for="HotelName" type="text" id="form3Example1m" class="form-control form-control-lg" />
                                                    <span asp-validation-for="HotelName" class="text-danger"></span>

                                                </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <!-- <div class="col-md-6 mb-4">
                                          <div class="form-outline">
                                            <input type="text" id="form3Example1m1" class="form-control form-control-lg" />
                                            <label class="form-label" for="form3Example1m1">Mother's name</label>
                                          </div>
                                        </div>  -->
                                        <div class="form-outline mb-4">
                                            <div class="form-outline">
                                                <input asp-for="HotelStreet" type="text" id="form3Example1n1" class="form-control form-control-lg" />
                                                <label asp-for="HotelStreet" class="form-label" for="form3Example1n1">Hotel Street</label>
                                                <span asp-validation-for="HotelStreet" class="text-danger"></span>
 
                                            </div>
                                        </div>
                                    </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-4">

                                                <select class="select" asp-for="State">
                                                    <option value="1">Hotel Country</option>
                                                    <option value="2">Option 1</option>
                                                    <option value="3">Option 2</option>
                                                    <option value="4">Option 3</option>
                                                </select>
                                                <span asp-validation-for="State" class="text-danger"></span>

                                            </div>
                                            <div class="col-md-6 mb-4">

                                                <select class="select" asp-for="City">
                                                    <option value="1">Hotel City</option>
                                                    <option value="2">Option 1</option>
                                                    <option value="3">Option 2</option>
                                                    <option value="4">Option 3</option>
                                                </select>
                                                <span asp-validation-for="City" class="text-danger"></span>

                                            </div>
                                        </div>

                                    
                                    <div class="form-outline mb-4">
                                        <label asp-for="HotelDescription" class="form-label" for="form3Example8">Hotel Description</label>
                                        <textarea asp-for="HotelDescription" type="text" id="form3Example8" class="form-control form-control-lg" style="font-size: 15px; scroll-behavior: auto;"></textarea>
                                            <span asp-validation-for="HotelDescription" class="text-danger"></span>

                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Image.Name" for="formFileMultiple" class="form-label">Hotel Images</label>
                                        <input asp-for="Image.Name" class="form-control" type="file" id="formFileMultiple" multiple />
                                            <span asp-validation-for="Image.Name" class="text-danger"></span>

                                    </div>

                                    <div class="col-md-6 mb-4">

                                        <select class="select" asp-for="HotelRate">
                                            <option value="1">Rate</option>
                                            <option value="2"> Star</option>
                                            <option value="3">2  </option>
                                            <option value="4"> 3</option>
                                            <option value="4"> 4</option>
                                            <option value="4"> 5</option>
                                        </select>
                                            <span asp-validation-for="HotelRate" class="text-danger"></span>

                                    </div>



                                    <div class="d-flex justify-content-end pt-3">

                                        <button type="submit" class="btn btn-primary btn-lg ms-2">Submit form</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                  
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    {await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

