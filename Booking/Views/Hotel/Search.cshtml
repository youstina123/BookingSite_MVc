@model SearchViewModel
@{
	ViewData["Title"] = "Search";
	Layout = "~/Views/Shared/_HotelLayout.cshtml";
	//SelectList dept = new SelectList(ViewBag.hotels, "Id", "Name");
	//List<Hotel> list = ViewBag.hotels;
}



<div class="col-lg-9">
	<div class="row" id="partialhotelcard">
		@if (Model == null)
		{
			<partial name="_AdvancedSearch" model="ViewBag.hotellist"></partial>
		}
		else
		{
			<partial name="_AdvancedSearch" model="ViewBag.hotels"></partial>

		}

	</div>
</div>

<div class="col-lg-3 sidebar">
	<div class="sidebar-wrap bg-light ftco-animate">
		<h3 class="heading mb-4">Advanced Search</h3>
		<form id="advancedsearch">
			<div class="fields">
				<div class="form-group">
					<div class="select-wrap one-third">
						<div class="icon"><span class="ion-ios-arrow-down"></span></div>
						<select asp-for="City" class="form-control">
							<option value="hurgada">hurgada</option>

						</select>
					</div>
				</div>
				<div class="form-group">
					<input type="text" asp-for="CheckinDate" class="form-control checkin_date" placeholder="Check In Date">
				</div>
				<div class="form-group">
					<input type="text" asp-for="CheckoutDate" class="form-control checkout_date" placeholder="Check Out Date">
				</div>
				<div class="form-group">
					<div class="select-wrap one-third">
						<div class="icon"><span class="ion-ios-arrow-down"></span></div>
						<select asp-for="Room" class="form-control">
							<option value="Suite">Suite</option>
							<option value="Room">Room</option>
							<option value="Both">Both</option>
						</select>
					</div>
				</div>
				<div class="form-group">
					<div class="select-wrap one-third">
						<div class="icon"><span class="ion-ios-arrow-down"></span></div>
						<select asp-for="Customer" class="form-control">
							<option value="1">1 Adult</option>
							<option value="2">2 Adult</option>
							<option value="3">3 Adult</option>
							<option value="4">4 Adult</option>
							<option value="5 ">5 Adult</option>
							<option value="6 ">6 Adult</option>
						</select>
					</div>
				</div>
				<div class="form-group">
					<div class="range-slider">
						<span>
							<input type="number" value="25000" min="0" max="120000" />	-
							<input type="number" value="50000" min="0" max="120000" />
						</span>
						<input value="1000" min="0" max="120000" step="500" type="range" />
						<input value="50000" min="0" max="120000" step="500" type="range" />
						</svg>
					</div>
				</div>
				<div class="form-group">
					<input type="button" onclick="GetPartialcard()" value="Search" class="btn btn-primary py-3 px-5">
				</div>
			</div>
		</form>
	</div>
	<div class="sidebar-wrap bg-light ftco-animate">
		<h3 class="heading mb-4">Star Rating</h3>
		<form class="star-rating" id="rating">
			<div class="form-check">
				<input type="checkbox" class="form-check-input" id="fivestar" name="stars" value="5">
				<label class="form-check-label" for="fivestar">
					<p class="rate"><span><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i></span></p>
				</label>
			</div>
			<div class="form-check">
				<input type="checkbox" class="form-check-input" id="fourstar" name="stars" value="4">
				<label class="form-check-label" for="fourstar">
					<p class="rate"><span><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star-o"></i></span></p>
				</label>
			</div>
			<div class="form-check">
				<input type="checkbox" class="form-check-input" id="exampleCheck1" name="stars" value="3">
				<label class="form-check-label" for="exampleCheck1">
					<p class="rate"><span><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star-o"></i><i class="icon-star-o"></i></span></p>
				</label>
			</div>
			<div class="form-check">
				<input type="checkbox" class="form-check-input" id="exampleCheck1" name="stars" value="2">
				<label class="form-check-label" for="exampleCheck1">
					<p class="rate"><span><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star-o"></i><i class="icon-star-o"></i><i class="icon-star-o"></i></span></p>
				</label>
			</div>
			<div class="form-check">
				<input type="checkbox" class="form-check-input" id="exampleCheck1" name="stars" value="1">
				<label class="form-check-label" for="exampleCheck1">
					<p class="rate"><span><i class="icon-star"></i><i class="icon-star-o"></i><i class="icon-star-o"></i><i class="icon-star-o"></i><i class="icon-star-o"></i></span></p>
				</label>
			</div>
			@if (Model == null)
			{
				@foreach (Hotel item in ViewBag.hotellist)
				{
					<input type="hidden" name="ides" value="@item.Id" />
				}
			}
			else
			{
				@foreach (Hotel item in ViewBag.hotels)
				{
					<input type="hidden" name="ides" value="@item.Id" />
				}
			}

			<div class="form-group">
				<input type="button" onclick="Filter()" value="Search" class="btn btn-primary py-3 px-5">
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<script>
		console.log("result");

		function GetPartialcard() {
			console.log("result");

			var valdata = $("#advancedsearch").serialize();
			console.log(valdata)
			$.ajax(
				{
					url: "/Hotel/AdvancedSearch/",
					type: "POST",
					data: valdata,
					success: function (result) {
						$("#partialhotelcard").html(result);
					}
				});

		}

		function Filter() {
			console.log("result");

			var valdata = $("#rating").serialize();
			console.log(valdata)
			$.ajax(
				{
					url: "/Hotel/FilterSearch/",
					type: "POST",
					data: valdata,
					success: function (result) {
						$("#partialhotelcard").html(result);
					}
				});

		}

	</script>
}
