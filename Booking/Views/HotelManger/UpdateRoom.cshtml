@using RepositoryModel.Models
@model Normal_Room
@{
    Layout = "_HotelManagerDashboardLayout";
  
}

<style>
    input {
        background-color: transparent;
        font-size: 25px;
    }

    label {
        font-size: 20px;
    }
</style>

<div class="bg-secondary rounded h-100 p-4" id="formDetails">
    <div class="row">
        <div class="col-md-9">
            <h4>Message Detail</h4>
            <form method="post" asp-action="UpdateRoom" asp-controller="HotelManger" asp-route-id="@Model.RoomId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group d-flex m-2">
                    <label  control-label">Number</label>
                    <input value="@Model.Room.Room_Num" asp-for="Room.Room_Num" class=" form-control" />
                    <span asp-validation-for="@Model.Room.Room_Num" class="text-danger"></span>
                </div>
                <div class="form-group d-flex m-2">
                    <label control-label"> Description</label>
                    <input value="@Model.Room.Description" asp-for="Room.Description" class="form-control" />
                    <span asp-validation-for="@Model.Room.Description" class="text-danger"></span>
                </div>
                <div class="form-group d-flex m-2">
                    <label  class="col-4 control-label">Number of adults</label>
                    <input value="@Model.Room.NumOfAdults" asp-for="Room.NumOfAdults" class="form-control" />
                    <span asp-validation-for="@Model.Room.NumOfAdults" class="text-danger"></span>
                </div>

                <div class="form-group d-flex m-2">
                    <label  class="col-4 control-label">Cost per night</label>
                    <input value="@Model.Room.Cost_Per_Night" asp-for="Room.Cost_Per_Night" class="form-control" />
                    <span asp-validation-for="@Model.Room.Cost_Per_Night" class="text-danger"></span>
                </div>

                <div class="form-group d-flex m-2">

                    <select class="select" asp-for="Type_Of_Room">

                        <option value="1">Sigle</option>
                        <option value="2">Double</option>
                        <option value="3">Triple</option>
                        <option value="4">Fourth</option>
                    </select>
                    <span asp-validation-for="Type_Of_Room" class="text-danger"></span>
                </div>
                <div class="form-group d-flex m-2">
                    <label  for="formFileMultiple" class="form-label"> Image</label>
                    <input value="@Model.Room.images" asp-for="Room.images" class="form-control" type="file" id="formFileMultiple" multiple />
                    <span asp-validation-for="@Model.Room.images" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
